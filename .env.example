# ⚠️  SECURITY WARNING: NEVER COMMIT REAL CREDENTIALS TO GIT!
# Copy this file to .env and fill with your real values

# Configuración de la aplicación
APP_NAME="API Facturación Electrónica CR"
DEBUG=false

# Base de datos PostgreSQL
DATABASE_URL=postgresql://user:password@db:5432/database_name

# Redis
REDIS_URL=redis://redis:6379

# API Ministerio de Hacienda - OBTENER CREDENCIALES OFICIALES
HACIENDA_BASE_URL=https://api.comprobanteselectronicos.go.cr/recepcion-sandbox/v1/
HACIENDA_TOKEN_URL=https://idp.comprobanteselectronicos.go.cr/auth/realms/rut-stag/protocol/openid-connect/token
HACIENDA_CLIENT_ID=your-client-id-from-hacienda
HACIENDA_CLIENT_SECRET=your-client-secret-from-hacienda
HACIENDA_USERNAME=your-username@stag.comprobanteselectronicos.go.cr
HACIENDA_PASSWORD=your-password-from-hacienda
HACIENDA_SANDBOX=true

# Certificado Digital (.p12) - OBTENER DEL MINISTERIO DE HACIENDA
CERTIFICATE_PATH=certificados/your-certificate.p12
CERTIFICATE_PASSWORD=your-certificate-password

# JWT para autenticación interna
SECRET_KEY=generate-a-secure-random-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Amazon SES Configuration - CONFIGURAR CREDENCIALES AWS
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
SES_FROM_EMAIL=your-email@yourdomain.com
SES_FROM_NAME=API Facturación Electrónica CR